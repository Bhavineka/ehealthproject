<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard | eHealth Cloud</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-header">
        <h2>ğŸ¥ eHealth</h2>
        <span class="role-badge">ADMIN</span>
      </div>
      
      <nav class="sidebar-nav">
        <a href="/admin-dashboard" class="nav-item active">
          <span class="icon">ğŸ“Š</span>
          <span>Dashboard</span>
        </a>
        <a href="/manage-doctors" class="nav-item">
          <span class="icon">ğŸ‘¨â€âš•ï¸</span>
          <span>Manage Doctors</span>
        </a>
        <a href="/manage-patients" class="nav-item">
          <span class="icon">ğŸ‘¥</span>
          <span>Manage Patients</span>
        </a>
        <a href="/add-patient" class="nav-item">
          <span class="icon">â•</span>
          <span>Add Patient Record</span>
        </a>
      </nav>
      
      <div class="sidebar-footer">
        <button onclick="logout()" class="btn btn-danger" style="width: 100%;">Logout</button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <div class="top-bar">
        <h1>Admin Dashboard</h1>
        <div class="user-info">
          <div class="user-avatar"><%= user.name.charAt(0).toUpperCase() %></div>
          <div>
            <div style="font-weight: 600;"><%= user.name %></div>
            <div style="font-size: 12px; color: var(--gray-700);"><%= user.email %></div>
          </div>
        </div>
      </div>

      <!-- Stats -->
      <div class="stats-grid">
        <div class="stat-card blue">
          <div class="stat-icon">ğŸ‘¨â€âš•ï¸</div>
          <h3>Total Doctors</h3>
          <div class="stat-value"><%= doctors.length %></div>
        </div>
        
        <div class="stat-card green">
          <div class="stat-icon">ğŸ‘¥</div>
          <h3>Total Patients</h3>
          <div class="stat-value"><%= patients.length %></div>
        </div>
        
        <div class="stat-card orange">
          <div class="stat-icon">ğŸ“Š</div>
          <h3>Total Users</h3>
          <div class="stat-value"><%= doctors.length + patients.length + 1 %></div>
        </div>
      </div>

      <!-- Doctors Table -->
      <div class="content-card">
        <h2>Registered Doctors</h2>
        <% if (doctors.length > 0) { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Registered</th>
              </tr>
            </thead>
            <tbody>
              <% doctors.forEach(d => { %>
                <tr>
                  <td><%= d.name %></td>
                  <td><%= d.email %></td>
                  <td><span class="badge badge-doctor">Doctor</span></td>
                  <td><%= d.createdAt ? new Date(d.createdAt.toDate()).toLocaleDateString() : 'N/A' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p style="color: var(--gray-700); text-align: center; padding: 40px;">No doctors registered yet.</p>
        <% } %>
      </div>

      <!-- Patients Table -->
      <div class="content-card">
        <h2>Registered Patients</h2>
        <% if (patients.length > 0) { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Registered</th>
              </tr>
            </thead>
            <tbody>
              <% patients.forEach(p => { %>
                <tr>
                  <td><%= p.name %></td>
                  <td><%= p.email %></td>
                  <td><span class="badge badge-patient">Patient</span></td>
                  <td><%= p.createdAt ? new Date(p.createdAt.toDate()).toLocaleDateString() : 'N/A' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p style="color: var(--gray-700); text-align: center; padding: 40px;">No patients registered yet.</p>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js"></script>
  <script src="/js/firebase-client-config.js"></script>
  <script src="/js/auth.js"></script>
</body>
</html>