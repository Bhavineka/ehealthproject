<!DOCTYPE html>
<html>
<head>
  <title>Patient Dashboard | eHealth Cloud</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard">
    <div class="sidebar">
      <div class="sidebar-header">
        <h2>ğŸ¥ eHealth</h2>
        <span class="role-badge">PATIENT</span>
      </div>
      
      <nav class="sidebar-nav">
        <a href="/patient-dashboard" class="nav-item active">
          <span class="icon">ğŸ“Š</span>
          <span>My Dashboard</span>
        </a>
        <a href="#" class="nav-item">
          <span class="icon">ğŸ“‹</span>
          <span>Medical Records</span>
        </a>
        <a href="#" class="nav-item">
          <span class="icon">ğŸ“…</span>
          <span>Appointments</span>
        </a>
      </nav>
      
      <div class="sidebar-footer">
        <button onclick="logout()" class="btn btn-danger" style="width: 100%;">Logout</button>
      </div>
    </div>

    <div class="main-content">
      <div class="top-bar">
        <h1>My Health Dashboard</h1>
        <div class="user-info">
          <div class="user-avatar"><%= user.name.charAt(0).toUpperCase() %></div>
          <div>
            <div style="font-weight: 600;"><%= user.name %></div>
            <div style="font-size: 12px; color: var(--gray-700);"><%= user.email %></div>
          </div>
        </div>
      </div>

      <div class="stats-grid">
        <div class="stat-card blue">
          <div class="stat-icon">ğŸ“‹</div>
          <h3>My Records</h3>
          <div class="stat-value"><%= records.length %></div>
        </div>
        
        <div class="stat-card green">
          <div class="stat-icon">âœ…</div>
          <h3>Completed Visits</h3>
          <div class="stat-value"><%= records.length %></div>
        </div>
        
        <div class="stat-card orange">
          <div class="stat-icon">ğŸ“…</div>
          <h3>Upcoming</h3>
          <div class="stat-value">0</div>
        </div>
      </div>

      <div class="content-card">
        <h2>My Medical Records</h2>
        <% if (records.length > 0) { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Condition</th>
                <th>Age at Visit</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% records.forEach(r => { %>
                <tr>
                  <td><strong><%= r.condition %></strong></td>
                  <td><%= r.age %></td>
                  <td><%= r.createdAt ? new Date(r.createdAt.toDate()).toLocaleDateString() : 'N/A' %></td>
                  <td>
                    <a href="/patient/<%= r.id %>" class="btn btn-secondary" style="padding: 6px 16px;">View Details</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div style="text-align: center; padding: 60px 20px;">
            <div style="font-size: 48px; margin-bottom: 16px;">ğŸ“‹</div>
            <h3 style="color: var(--gray-700); margin-bottom: 8px;">No medical records yet</h3>
            <p style="color: var(--gray-700);">Your medical records will appear here</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js"></script>
  <script src="/js/firebase-client-config.js"></script>
  <script src="/js/auth.js"></script>
</body>
</html>