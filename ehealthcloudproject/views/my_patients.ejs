<!DOCTYPE html>
<html>
<head>
  <title>My Patients | eHealth Cloud</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="dashboard">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-header">
        <h2>ğŸ¥ eHealth</h2>
        <span class="role-badge">DOCTOR</span>
      </div>
      
      <nav class="sidebar-nav">
        <a href="/doctor-dashboard" class="nav-item">
          <span class="icon">ğŸ“Š</span>
          <span>Dashboard</span>
        </a>
        <a href="/my-patients" class="nav-item active">
          <span class="icon">ğŸ‘¥</span>
          <span>My Patients</span>
        </a>
        <a href="/add-patient" class="nav-item">
          <span class="icon">â•</span>
          <span>Add Patient</span>
        </a>
      </nav>
      
      <div class="sidebar-footer">
        <button onclick="logout()" class="btn btn-danger" style="width: 100%;">Logout</button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <div class="top-bar">
        <h1>My Patients</h1>
        <div class="user-info">
          <div class="user-avatar"><%= user.name.charAt(0).toUpperCase() %></div>
          <div>
            <div style="font-weight: 600;">Dr. <%= user.name %></div>
            <div style="font-size: 12px; color: var(--gray-700);"><%= user.email %></div>
          </div>
        </div>
      </div>

      <!-- Stats -->
      <div class="stats-grid">
        <div class="stat-card blue">
          <div class="stat-icon">ğŸ‘¥</div>
          <h3>Total Patients</h3>
          <div class="stat-value"><%= patients.length %></div>
        </div>
        
        <div class="stat-card green">
          <div class="stat-icon">ğŸ“‹</div>
          <h3>With Medical Records</h3>
          <div class="stat-value"><%= patients.filter(p => p.pdfLink).length %></div>
        </div>
        
        <div class="stat-card orange">
          <div class="stat-icon">ğŸ“</div>
          <h3>With Encrypted Notes</h3>
          <div class="stat-value"><%= patients.filter(p => p.notesEncrypted).length %></div>
        </div>
      </div>

      <!-- Patients List -->
      <div class="content-card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
          <h2 style="margin: 0;">Patient List</h2>
          <a href="/add-patient" class="btn btn-success">+ Add New Patient</a>
        </div>
        
        <% if (patients.length > 0) { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Patient Name</th>
                <th>Age</th>
                <th>Condition</th>
                <th>Medical Records</th>
                <th>Notes</th>
                <th>Added On</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% patients.forEach(p => { %>
                <tr>
                  <td><strong><%= p.name %></strong></td>
                  <td><%= p.age %> years</td>
                  <td><%= p.condition %></td>
                  <td>
                    <% if (p.pdfLink) { %>
                      <% if (p.pdfType === 'link') { %>
                        <a href="<%= p.pdfLink %>" target="_blank" style="color: var(--primary); text-decoration: none;">
                          ğŸ”— View Link
                        </a>
                      <% } else if (p.pdfType === 'image') { %>
                        <a href="<%= p.pdfLink %>" target="_blank" style="color: var(--success); text-decoration: none;">
                          ğŸ“· View Image
                        </a>
                      <% } else if (p.pdfType === 'document') { %>
                        <a href="<%= p.pdfLink %>" target="_blank" style="color: var(--warning); text-decoration: none;">
                          ğŸ“„ View Document
                        </a>
                      <% } else { %>
                        <a href="<%= p.pdfLink %>" target="_blank" style="color: var(--primary); text-decoration: none;">
                          ğŸ“ View File
                        </a>
                      <% } %>
                    <% } else { %>
                      <span style="color: var(--gray-700);">No records</span>
                    <% } %>
                  </td>
                  <td>
                    <% if (p.notesEncrypted) { %>
                      <span style="color: var(--success);">ğŸ”’ Encrypted</span>
                    <% } else { %>
                      <span style="color: var(--gray-700);">â€”</span>
                    <% } %>
                  </td>
                  <td><%= p.createdAt ? new Date(p.createdAt.toDate()).toLocaleDateString() : 'N/A' %></td>
                  <td>
                    <a href="/patient/<%= p.id %>" class="btn btn-secondary" style="padding: 6px 16px; display: inline-block;">
                      View Full Details
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div style="text-align: center; padding: 60px 20px;">
            <div style="font-size: 48px; margin-bottom: 16px;">ğŸ‘¥</div>
            <h3 style="color: var(--gray-700); margin-bottom: 8px;">No patients added yet</h3>
            <p style="color: var(--gray-700); margin-bottom: 24px;">You haven't added any patients to your list</p>
            <a href="/add-patient" class="btn btn-primary" style="width: auto; padding: 12px 32px;">Add Your First Patient</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js"></script>
  <script src="/js/firebase-client-config.js"></script>
  <script src="/js/auth.js"></script>
</body>
</html>