    <hr>

    <h2>Patients List</h2>
    <ul>
      <% if (patients.length > 0) { %>
        <% patients.forEach(p => { %>
          <li>
            <a href="/patient/<%= p.id %>"><%= p.name %> (Age: <%= p.age %>)</a>
